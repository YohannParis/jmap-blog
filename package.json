{
  "name": "poem-blog",
  "version": "1.0.0",
  "description": "A minimalist blog for publishing poems via email",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "build": "node src/build-site.js",
    "fetch": "node src/fetch-jmap.js",
    "format": "npx prettier --write .  && npx prettier \"./templates/*.kit\" --write --parser html"
  },
  "keywords": [
    "blog",
    "static-site",
    "poems",
    "email",
    "jmap"
  ],
  "author": "Yohann Paris",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YohannParis/poem-blog"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "dependencies": {
    "dotenv": "16.5.0",
    "fs-extra": "11.3.0"
  }
}
